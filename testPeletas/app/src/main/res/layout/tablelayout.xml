<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:stretchColumns="1">

    <!-- lo que sea hijo del table layout será una fila
    <TextView
        android:text="Hola Soy una Fila"/>
     Lo ideal sería que esté dentro de un tablrwo
    -->
    <TableRow android:background="#3f58b5">
        <!--las columnas son las de layout_column
        las columnas se numeran desde el 0. 0,1,2,...
         en este caso no hay columna 1-->
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="Articulo"
            android:textColor="@color/white" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="Precio"
            android:textColor="@color/white" />
    </TableRow>


    <TableRow>
        <!--las columnas son las de layout_column
        las columnas se numeran desde el 0. 0,1,2,...
         en este caso no hay columna 1-->
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="2KG de Naranja" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="1.50$"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="3 Tortillas de patatas" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="6.84$"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="5 Sushi" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="15.00$"
            android:textAlignment="textEnd"/>
    </TableRow>


    <View
        android:background="#acaccc"
        android:layout_height="2dp"/>


    <TableRow>
        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="Subtotal"
            android:textColor="#3f51b5"/>

        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="23.14$"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="Cupón de Descuento 15%"
            android:textColor="#3f51b5"/>

        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="-3.14%$"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Costo envío"
            android:textColor="#3f51b5"/>

        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2.18%$"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Total"
            android:textColor="@color/white"
            android:background="#3f51b5"/>

        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="22.18$"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:background="#3f51b5"/>
    </TableRow>



</TableLayout>