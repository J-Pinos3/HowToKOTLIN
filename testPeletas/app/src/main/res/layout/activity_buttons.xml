<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buttons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Iniciar Sesión"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>


        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Button"
            android:paddingLeft="11dp"
            android:paddingRight="18dp"
            android:background="@color/gray"
            android:backgroundTint="@color/green"
            android:gravity="left|center_vertical"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="6dp"
            android:layout_marginBottom="9dp"/>


        <!-- El backgroundTint tiene más prioridad que el background
        por eso apararece café

        android:backgroundTint="@color/earth"
        si está puesto ese backgroundTint, no se verá lo del drawable
        -->
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Botón"
            android:paddingLeft="11dp"
            android:paddingRight="18dp"
            android:background="@drawable/corners"
            android:gravity="center"
            android:backgroundTint="@color/earth"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="6dp"
            android:layout_marginBottom="6dp"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple"
            tools:srcCompat="@drawable/ic_email" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgCondiciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- CHIP 1 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip1"
                style="@style/chEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="parking"
                app:chipIcon="@drawable/ic_car" />

            <!-- CHIP 2 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                style="@style/chEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comedor" />

            <!-- CHIP 3 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                style="@style/chEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="piscina" />

            <!-- CHIP 4 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                style="@style/chEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 baños" />

            <!-- CHIP 5 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                style="@style/chEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salón recreacional" />

        </com.google.android.material.chip.ChipGroup>


    </LinearLayout>


</ScrollView>