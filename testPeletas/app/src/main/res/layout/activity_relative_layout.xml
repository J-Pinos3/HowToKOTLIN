<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">


    <View
        android:id="@+id/vZ"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/green"
        android:layout_marginBottom="10dp"
        android:translationZ="1dp"
        android:translationX="20dp"
        android:translationY="20dp"
        android:scaleY="1"
        android:scaleX="1"/>

    <View
        android:id="@+id/vA"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/blue_dark"
        android:layout_marginBottom="10dp"
        android:translationY="30dp"/>
    <!--
    El translation no cambia el Ã¡rea prncipal
    establecida por los atributos principales, solo
    lo traslada visualmente
    -->


    <View
        android:id="@+id/vB"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@color/gray"
        android:layout_below="@id/vA"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/vC"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/gray"
        android:layout_below="@id/vA"
        android:layout_toRightOf="@id/vB"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>


    <View
        android:id="@+id/vD"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@color/gray"
        android:layout_below="@id/vB"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/vE"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@color/gray"
        android:layout_below="@id/vC"
        android:layout_toEndOf="@id/vD"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>


    <View
        android:id="@+id/vF"
        android:layout_width="150dp"
        android:layout_height="153dp"
        android:background="@color/colorOn"
        android:layout_below="@id/vD"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />


    <View
        android:id="@+id/vG"
        android:layout_width="250dp"
        android:layout_height="78dp"
        android:background="@color/colorOn"
        android:layout_toEndOf="@id/vF"
        android:layout_below="@id/vE"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@id/vF"/>

    <View
        android:id="@+id/vH"
        android:layout_width="250dp"
        android:layout_height="78dp"
        android:background="@color/colorOn"
        android:layout_toEndOf="@id/vF"
        android:layout_below="@id/vG"
        android:layout_alignBottom="@id/vF" />


    <View
        android:id="@+id/vI"
        android:layout_width="120dp"
        android:layout_height="78dp"
        android:background="@color/blue_light"
        android:layout_below="@id/vF"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/blue_light"
        android:layout_below="@id/vI"/>







