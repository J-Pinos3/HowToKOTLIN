<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".calc_grid"
    android:layout_rowWeight="6"
    android:layout_columnWeight="4"
    android:columnCount="4"
    android:rowCount="6">


    <TextView
        android:id="@+id/tvTotal"
        style="@style/BotonCalculadora.Total"
        android:text="Total: "
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:textAlignment="textStart"
        android:layout_width="match_parent"
        android:layout_columnSpan="4"/>


    <TextView
        android:id="@+id/signo_c"
        android:tag="C"
        style="@style/BotonCalculadora.Rojo"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:layout_marginRight="1dp"
        android:text="C"
        android:onClick="onOperationSelected"
        />


    <TextView
        android:id="@+id/signo_delete"
        android:tag="DEL"
        android:background="#ED4D39"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="0dp"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:text=""
        android:drawableStart="@drawable/ic_delete"
        android:onClick="onOperationSelected"/>


    <TextView
        android:id="@+id/numero_7"
        style="@style/BotonCalculadora.Azul"
        android:tag="7"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="7"
        android:onClick="onNumberPressed"/>

    <TextView
        android:id="@+id/numero_8"
        style="@style/BotonCalculadora.Azul"
        android:tag="8"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="8"
        android:onClick="onNumberPressed"/>



    <TextView
        android:id="@+id/numero_9"
        style="@style/BotonCalculadora.Azul"
        android:tag="9"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="9"
        android:onClick="onNumberPressed"/>

    <TextView
        android:id="@+id/numero_4"
        style="@style/BotonCalculadora.Azul"
        android:tag="4"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="4"
        android:onClick="onNumberPressed"/>

    <TextView
        android:id="@+id/numero_5"
        style="@style/BotonCalculadora.Azul"
        android:tag="5"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="5"
        android:onClick="onNumberPressed"/>


    <TextView
        android:id="@+id/numero_6"
        style="@style/BotonCalculadora.Azul"
        android:tag="6"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:text="6"
        android:onClick="onNumberPressed"/>

    <TextView
        android:id="@+id/numero_1"
        style="@style/BotonCalculadora.Azul"
        android:tag="1"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="1"
        android:onClick="onNumberPressed"/>

    <TextView
        android:id="@+id/numero_2"
        style="@style/BotonCalculadora.Azul"
        android:tag="2"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="2"
        android:onClick="onNumberPressed"/>


    <TextView
        android:id="@+id/numero_3"
        style="@style/BotonCalculadora.Azul"
        android:tag="3"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:text="3"
        android:onClick="onNumberPressed"/>


    <TextView
        android:id="@+id/signo_punto"
        style="@style/BotonCalculadora.Azul"
        android:tag="POINT"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:text="."
        android:onClick="onNumberPressed"/>

    <TextView
        android:id="@+id/numero_0"
        style="@style/BotonCalculadora.Azul"
        android:tag="0"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:text="0"
        android:onClick="onNumberPressed"/>


    <TextView
        android:id="@+id/signo_igual"
        style="@style/BotonCalculadora.Azul"
        android:tag="IGUAL"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="5"
        android:text="="
        android:onClick="onEqualsPressed"/>

    <TextView
        android:id="@+id/signo_division"
        style="@style/BotonCalculadora.Rojo"
        android:tag="DIVI"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:gravity="center"
        android:text="/"
        android:onClick="onOperationSelected"/>

    <TextView
        android:id="@+id/signo_multiplicacion"
        style="@style/BotonCalculadora.Rojo"
        android:tag="MULTI"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="x"
        android:onClick="onOperationSelected"/>

    <TextView
        android:id="@+id/signo_menos"
        style="@style/BotonCalculadora.Rojo"
        android:tag="RESTA"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="-"
        android:onClick="onOperationSelected"/>


    <TextView
        android:id="@+id/signo_suma"
        style="@style/BotonCalculadora.Rojo"
        android:tag="SUMA"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:layout_marginTop="1dp"
        android:text="+"
        android:onClick="onOperationSelected"/>




</GridLayout>