<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbMedium"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/pbSmall"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ProgressBar
            android:id="@+id/pbLarge"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/pbIndeterminado"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:background="@color/colorOn"
            android:indeterminateTint="@color/black"
            android:backgroundTint="@color/green"
            android:layout_marginVertical="4dp"
            />

        <ProgressBar
            android:id="@+id/pbDeterminado"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOn"
            android:max="300"
            android:progress="200"
            android:progressTint="@color/white"
            android:backgroundTint="@color/purple_200"
            android:layout_marginVertical="3dp"
            />

        <ProgressBar
            android:id="@+id/pbSecondary"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300"
            android:progress="150"
            android:progressTint="@color/orange"
            android:progressBackgroundTint="@color/purple_200"
            android:secondaryProgress="168"
            android:secondaryProgressTint="@color/blue_dark"
            android:layout_marginVertical="3dp"
            />


        <SeekBar
            android:id="@+id/sbNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:thumbTint="@color/purple"
            android:max="100"
            android:progress="30"
            android:progressTint="@color/orange"
            android:progressBackgroundTint="@color/blue_dark"/>

        <SeekBar
            android:id="@+id/sbCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:max="100"
            android:progress="30"
            android:thumb="@drawable/sb_thumb"
            android:progressDrawable="@drawable/sb_progress_bg"/>

        <SeekBar
            android:id="@+id/sbDiscrete"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:max="10"
            android:progress="6" />

        <CalendarView
            android:id="@+id/cvEjemplo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:weekDayTextAppearance="@style/CalenderViewDateCustomText"
            android:dateTextAppearance="@style/CalenderViewWeekCustomText"
            android:background="@color/gray"
            />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/black"
            android:text="Fecha seleccionada"
            android:textColor="@color/white"
            />

        <View
            android:id="@+id/vh"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/fire" />

        <View
            android:id="@+id/vv"
            android:layout_width="4dp"
            android:layout_height="100dp"
            android:background="@color/fire"
            android:layout_gravity="center" />


        <NumberPicker
            android:id="@+id/npEjemplo"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:theme="@style/NumberPickerTheme"/>

        <TextView
            android:id="@+id/tvNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/black"
            android:text="Fecha seleccionada"
            android:textColor="@color/white"
            />



        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:isIndicator="false"
            android:rating="3.5"
            android:stepSize="0.5"
            android:progressBackgroundTint="@color/blue_light"
            android:progressTint="@color/orange"
            android:background="@color/green"/>
            <!--android:backgroundTint="@color/earth"
            este atributo no se muestra si no hay un background
            -->
        <TextView
            android:id="@+id/tvValoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:text="3.5/5"
            android:textColor="@color/black"
            />



    </LinearLayout>



</ScrollView>